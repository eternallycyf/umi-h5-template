{
  "private": true,
  "scripts": {
    "biz-init": "ts-node scripts/generateBizConfig.ts",
    "start": "npm run biz-init && cross-env APP_ENV=development umi dev",
    "build:dev": "npm run biz-init && cross-env APP_ENV=development umi build",
    "build:pro": "npm run biz-init && cross-env APP_ENV=production umi build",
    "postinstall": "umi generate tmp",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@ant-design/pro-layout": "^6.5.0",
    "react": "17.x",
    "react-dom": "17.x",
    "umi": "^3.5.28",
    "antd-mobile": "^5.0.0-rc.12",
    "antd-mobile-icons": "^0.2.2",
    "axios": "^0.24.0",
    "classnames": "^2.3.1",
    "echarts": "^5.2.2",
    "echarts-for-react": "^3.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "react-activation": "^0.9.7",
    "vconsole": "^3.11.1"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@umijs/preset-react": "1.x",
    "@umijs/test": "^3.5.28",
    "lint-staged": "^10.0.7",
    "prettier": "^2.2.0",
    "typescript": "^4.1.2",
    "yorkie": "^2.0.0",
    "@types/lodash": "^4.14.177",
    "cross-env": "^7.0.3",
    "ejs": "^3.1.6",
    "postcss-px-to-viewport": "^1.1.1",
    "ts-node": "^10.4.0"
  }
}